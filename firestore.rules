rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is the specific admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'ngimbabetwin@gmail.com';
    }

    // Users collection
    // Users can read/write their own profile
    // Admin can read/write all profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Matches collection
    // Everyone can read matches (public)
    // Only admin can write (create, update, delete)
    match /matches/{matchId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
